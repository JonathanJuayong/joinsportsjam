---
import type { IconType } from "../lib/types";
import Icon from "./Icon.astro";

interface Props {
  icon: IconType;
  title: string;
}

const { icon, title } = Astro.props;
---

<li
  class:list={[
    "flex flex-col gap-2xl items-center bg-white",
    "border border-2 p-2xl pt-[7em] rounded-xl relative shadow-none border-t-0",
    "hover:shadow-2xl transition-all hover:scale-110",
    "sm:pt-[5em]",
  ]}
>
  <div
    class:list={[
      "bg-black text-white outline outline-black rounded-full outline-8 outline-offset-8 absolute -top-[5em]",
      "before:bg-white before:content-[''] before:absolute before:top-[50%] before:left-[50%] before:-translate-x-[50%] before:-translate-y-[50%] before:-z-10 before:rounded-full before:w-[110%] before:aspect-square",
    ]}
  >
    <Icon {icon} size={150} />
  </div>
  <div class="space-y-lg col-span-2 text-center">
    <h3 class="text-3xl font-black uppercase">{title}</h3>
    <p class="">
      <slot />
    </p>
  </div>
</li>
